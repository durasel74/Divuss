<UserControl x:Class="Divuss.Resources.Controls.Albums"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Divuss.Resources.Controls"
             xmlns:Controls="clr-namespace:Divuss.Resources.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <ListBox x:Name="AlbumList" Style="{DynamicResource AlbumList}"
                 ItemContainerStyle="{DynamicResource AlbumListItem}"
                 ItemsSource="{Binding AlbumsList}"
                 SelectedItem="{Binding CurrentAlbum}"/>

        <Grid>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                <Button Width="50" Height="50" Content="Create" Margin="4"
                        Command="{Binding RelativeSource={RelativeSource 
                                FindAncestor, AncestorType={x:Type Window}}, 
                                Path=DataContext.AlbumCreateCommand}"/>

                <Button Width="50" Height="50" Content="Delete" Margin="4"
                        CommandParameter="{Binding ElementName=AlbumList,
                    Path=SelectedItems}"
                        Command="{Binding RelativeSource={RelativeSource 
                                FindAncestor, AncestorType={x:Type Window}}, 
                                Path=DataContext.AlbumDeleteCommand}"/>
            </StackPanel>
        </Grid>

        <Controls:AlbumPhotos/>
    </Grid>
</UserControl>
