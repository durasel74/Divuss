<UserControl x:Class="Divuss.Resources.Controls.Photos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Divuss.Resources.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <ListBox x:Name="PictureList" Style="{DynamicResource PictureList}"
                 ItemContainerStyle="{DynamicResource PictureListItem}"
                 MouseLeftButtonDown="PictureList_MouseLeftButtonDown"
                 ItemsSource="{Binding LastPictures}"/>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="4" Orientation="Horizontal">

            <Button Width="50" Height="50" Content="Open" 
                    Command="{Binding RelativeSource={RelativeSource
                            FindAncestor, AncestorType={x:Type Window}}, 
                            Path=DataContext.PictureOpenCommand}"/>

            <Button Width="50" Height="50" Content="Delete"
                    CommandParameter="{Binding ElementName=PictureList,
                                    Path=SelectedItems}"
                    Command="{Binding RelativeSource={RelativeSource 
                            FindAncestor, AncestorType={x:Type Window}}, 
                            Path=DataContext.PictureDeleteCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
