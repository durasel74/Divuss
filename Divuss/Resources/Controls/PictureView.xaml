<UserControl x:Class="Divuss.Resources.Controls.PictureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Divuss.Resources.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Style="{DynamicResource PictureViewPanel}">
        <Image Source="{Binding CurrentPicture.ImagePath}" Margin="10"
               RenderOptions.BitmapScalingMode="HighQuality"/>

        <Grid>
            <Button Style="{DynamicResource ActionButton}"
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Margin="3" Content="&lt;"
                    Command="{Binding RelativeSource={RelativeSource FindAncestor, 
                            AncestorType={x:Type Window}}, 
                            Path=DataContext.CommandModel.PictureSwitchCommand}"/>

            <Button Style="{DynamicResource ActionButton}"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="3" Content="Full"
                    Click="FullscreenButton_Click"
                    Command="{Binding RelativeSource={RelativeSource FindAncestor, 
                            AncestorType={x:Type Window}}, 
                            Path=DataContext.FullscreenModeCommand}"/>

            <Button HorizontalAlignment="Left" VerticalAlignment="Center"
                    Background="DarkRed"
                    Width="10" Height="50" Content="&lt;" FontSize="16"
                    Command="{Binding RelativeSource={RelativeSource FindAncestor, 
                            AncestorType={x:Type Window}}, 
                            Path=DataContext.CommandModel.PictureViewPreviousMoveCommand}"/>

            <Button HorizontalAlignment="Right" VerticalAlignment="Center"
                    Width="10" Height="50" Content=">" FontSize="16"
                    Background="DarkRed"
                    Command="{Binding RelativeSource={RelativeSource FindAncestor, 
                            AncestorType={x:Type Window}}, 
                            Path=DataContext.CommandModel.PictureViewNextMoveCommand}"/>
        </Grid>
    </Grid>
</UserControl>
