<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="AlbumListItem" TargetType="ListBoxItem">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BorderThickness" Value="0"/>

        <Setter Property="Background" Value="#777"/>
        <Setter Property="BorderBrush" Value="Transparent"/>

        <Setter Property="Template" Value="{StaticResource AlbumListItemTemplate}"/>
        <Setter Property="ContentTemplate" Value="{StaticResource AlbumListItemContentTemplate}"/>
    </Style>
</ResourceDictionary>
    