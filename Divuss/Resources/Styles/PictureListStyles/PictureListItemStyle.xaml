<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="PictureListItem" TargetType="ListBoxItem">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="200"/>

        <Setter Property="Background" Value="#444"/>
        <Setter Property="BorderBrush" Value="Transparent"/>

        <Setter Property="Template" Value="{StaticResource PictureListItemTemplate}"/>
        <Setter Property="ContentTemplate" Value="{StaticResource PictureListItemContentTemplate}"/>
    </Style>
</ResourceDictionary>
    