<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:Divuss.Resources.Controls">

    <DataTemplate x:Key="SectionsListContentTemplate">
        <ContentControl x:Name="Content"/>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding SectionName}" Value="Photos">
                <Setter TargetName="Content" Property="Content">
                    <Setter.Value>
                        <Controls:Photos DataContext="{Binding}"/>
                    </Setter.Value>
                </Setter>
            </DataTrigger>

            <DataTrigger Binding="{Binding SectionName}" Value="Albums">
                <Setter TargetName="Content" Property="Content">
                    <Setter.Value>
                        <Controls:Albums/>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
</ResourceDictionary>
    