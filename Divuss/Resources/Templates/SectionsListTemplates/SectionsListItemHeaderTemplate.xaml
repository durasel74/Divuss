<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="SectionsListItemHeaderTemplate">
        <HeaderedContentControl x:Name="Header"/>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding SectionName}"
                                     Value="Photos">
                <Setter TargetName="Header" Property="Header"
                                    Value="Фотографии"/>
            </DataTrigger>

            <DataTrigger Binding="{Binding SectionName}"
                                     Value="Albums">
                <Setter TargetName="Header" Property="Header"
                                    Value="Альбомы"/>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
</ResourceDictionary>
    