<Window x:Class="Divuss.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Divuss.View"
        xmlns:Controls="clr-namespace:Divuss.Resources.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="#555">
        <TabControl Background="Transparent">
            <TabItem Header="{Binding PhotosTab.SectionName}">
                <Controls:Photos DataContext="{Binding PhotosTab}"/>
            </TabItem>

            <TabItem Header="{Binding AlbumsTab.SectionName}">
                <Controls:Albums/>
            </TabItem>

            
            
            <TabItem Header="Test">
                <Controls:Photos DataContext="{Binding PhotosTab}"/>
            </TabItem>
        </TabControl>

        <Grid Visibility="Collapsed">
            <Controls:PictureView DataContext="{Binding PhotosTab}"/>

            <Button HorizontalAlignment="Left" VerticalAlignment="Top"
                    Width="100" Height="50" Content="Назад"/>
        </Grid>
    </Grid>
</Window>
